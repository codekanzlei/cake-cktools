{
    "name": "codekanzlei/cake-cktools",
    "description": "codekanzlei Tools & Utilities collection",
    "license": "MIT",
    "type": "cakephp-plugin",
    "homepage": "https://github.com/scherersoftware/cake-cktools",
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "^4.0.0",
        "mpdf/mpdf": "^8.0",
        "gettext/gettext": "^4.1",
        "scherersoftware/cake-api-baselayer": "^3.0.0-rc1",
        "codekanzlei/cake-frontend-bridge": "^4.0.0-rc1",
        "codekanzlei/cake-auth-actions": "^4.0.0-rc5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3.3|^8.4",
        "phpstan/phpstan": "^0.11",
        "scherersoftware/coding-standard": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "CkTools\\": "src",
            "CkTools\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@php-check",
            "@phpstan",
            "@test"
        ],
        "php-check": "vendor/bin/phpcs -p --standard=vendor/scherersoftware/coding-standard/scherersoftware ./src ./config",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -l 5 ./src",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
